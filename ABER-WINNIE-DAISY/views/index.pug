doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Vendor Dashboard
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/styles.css')
  body
    .container.py-4
      #alertContainer
      .row.mb-4
        .col-12
          .card.top.mb-4
            .card-section
              h1.black-text#totalSales UGX 50,000,000
              h3.grey-text Sales Revenue
            .vertical-divider
            .card-section
              h1.black-text#totalOrders UGX 15,000,000
              h3.grey-text Expected Orders

          .bottom-cards
            .card.bottom.me-4
              h1.red-text#outOfStock 5
              h3.grey-text Out of Stock
            .card.bottom
              h1.green-text#inStock UGX 42,000,000
              h3.grey-text Capital in Stock

      .row
        .col-md-5
          .card.form-card
            .card-body
              h3.card-title.mb-4 Add Product
              form#productForm(novalidate)
                .form-group.mb-3
                  label.form-label(for='productName') Product Name
                  input#productName.form-control(type='text' required)
                  .invalid-feedback Please enter a valid product name

                .form-group.mb-3
                  label.form-label(for='category') Category
                  input#category.form-control(type='text' required)
                  .invalid-feedback Please select a category

                .form-group.mb-3
                  label.form-label(for='price') Price (UGX)
                  input#price.form-control(type='number' min='0' step='1000' required)
                  .invalid-feedback Please enter a valid price

                .form-group.mb-3
                  label.form-label(for='quantity') Quantity
                  input#quantity.form-control(type='number' min='1' required)
                  .invalid-feedback Please enter a valid quantity

                .row.mb-3
                  .col-md-6
                    label.form-label(for='color') Color
                    input#color.form-control(type='text' required)
                    .invalid-feedback Please enter a color
                  .col-md-6
                    label.form-label(for='upload') Product Image
                    input#upload.form-control(type='file' accept='image/*' required)
                    .invalid-feedback Please select an image

                .button-container.mt-4
                  button.btn.btn-primary.saveBtn(type='submit') Save Product
                  button.btn.btn-secondary.clearBtn(type='button') Clear Form

        .col-md-7
          .card
            .card-body
              h3.card-title.mb-4 Products List
              .table-responsive
                table#productTable.table.table-hover
                  thead.table-dark
                    tr
                      th Product ID
                      th Name
                      th Category
                      th Price (UGX)
                      th Quantity
                      th Color
                      th Image
                  tbody
              #pagination.d-flex.justify-content-center.mt-3

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js')
    script(src='/js/main.js')