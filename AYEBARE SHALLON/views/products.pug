doctype html
html
  head
    title E-COMMERCE
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet", href="/css/prod.css")
    script(src='/js/products.js' defer)

  body.bg-light
    .container-fluid.py-4
      // Two Column Layout
      .row.mb-4
        // Cards Column
        .col-md-7
          .row.g-3
            .col-md-6
              .card.border-0.shadow-sm
                .card-body
                  h3.text-dark.mb-1 UGX 50,000,000
                  p.text-muted.mb-0 Sales

            .col-md-6
              .card.border-0.shadow-sm
                .card-body
                  h3.text-dark.mb-1 UGX 15,000,000
                  p.text-muted.mb-0 Orders

            .col-md-6
              .card.border-0.shadow-sm
                .card-body
                  h3.text-success.mb-1 UGX 42,000,000
                  p.text-muted.mb-0 In stock

            .col-md-6
              .card.border-0.shadow-sm
                .card-body
                  h3.text-danger.mb-1 5
                  p.text-muted.mb-0 Out of stock

        // Form Column
        .col-md-5
          .card.border-0.shadow-sm
            .card-body
              h5.mb-3 Add Product
              #alertContainer
              form#productForm
                .mb-3
                  input.form-control(type='text' name='name' placeholder='Product Name')
                .mb-3
                  input.form-control(type='text' name='category' placeholder='Category')
                .mb-3
                  input.form-control(type='number' name='price' placeholder='Price')
                .mb-3
                  input.form-control(type='number' name='quantity' placeholder='Quantity')
                .row.g-3.mb-3
                  .col-6
                    input.form-control(type='text' name='color' placeholder='Color')
                  .col-6
                    input.form-control(type='file' name='image' placeholder='Upload Image')
                .d-flex.gap-2.justify-content-end
                  button.btn.btn-secondary(type='reset') CLEAR
                  button.btn.btn-warning(type='submit') SAVE

      // Table Section
      .card.border-0.shadow-sm
        .card-body.p-0
          .table-responsive
            table.table.mb-0
              thead.bg-dark.text-white
                tr
                  th ID
                  th NAME
                  th CATEGORY
                  th PRICE (UGX)
                  th QUANTITY
              tbody#productTable