meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Vendors-Dashboard
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css", rel="stylesheet")
link(rel="stylesheet", href="/css/dashboard.css")

.container
  .row.g-4
    // Left column with cards
    .col-md-6
      .sales-orders-card
        .stat
          span.amount UGX 50,000,000
          span.label Sales
        .divider
        .stat
          span.amount UGX 15,000,000
          span.label Orders
      .card-row-2.mt-4
        .equal-card
          h4(style="color: green;") UGX 42,000,000
          p In stock
        .equal-card
          h4(style="color: red;") 5
          p Out of stock

    // Right column with form
    .col-md-6
      #product-form
        h5.mb-3
          strong Add Product
        form#productForm(action='addProduct' method='post')
          input#productname(type="text", name="productName", placeholder="Product Name")
          small.text-danger#error-productname

          input#category(type="text", name="category", placeholder="Category")
          small.text-danger#error-category

          input#price(type="number", name="price", placeholder="Price")
          small.text-danger#error-price

          input#quantity(type="number", name="quantity", placeholder="Quantity")
          small.text-danger#error-quantity

          .row
            .col
              input#color(type="text", name="color", placeholder="Color")
              small.text-danger#error-color
            .col
              input#image(type="url", name="image", placeholder="Upload Image")
              small.text-danger#error-image

          .row.mt-3
            .col
              button#save-btn(type="submit") SAVE
            .col
              button#clear-btn(type="reset") CLEAR


  // Full-width table below everything
  .product-table.mt-5
    table
      thead
        tr
          th ID
          th Product name
          th Category
          th Price
          th Quantity
      tbody
        if products && products.length
          each product, index in products
            tr
              td #{index + 1}
              td #{product.productName}
              td #{product.category}
              td #{product.price}
              td #{product.quantity}

script(src="/js/productsvalidation.js")
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js")
